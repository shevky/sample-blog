<div
    class="star-toast fixed bottom-6 right-6 z-50 flex max-w-sm flex-col gap-3 rounded-2xl border border-slate-200/80 bg-white/95 px-5 py-4 text-sm shadow-2xl shadow-slate-300/70 transition-all duration-500 ease-out dark:border-slate-700/80 dark:bg-slate-900/90 dark:shadow-slate-900/40"
    data-star-toast
    hidden
>
    <div class="flex items-start gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-sky-600/10 text-xl" aria-hidden="true">⭐</div>
        <div class="space-y-1 text-slate-700 dark:text-slate-200">
            <p class="text-xs font-semibold uppercase tracking-[0.25em] text-sky-600 dark:text-sky-400">
                {{i18n.promo.starProject.title}}
            </p>
            <p class="leading-relaxed">
                {{i18n.promo.starProject.message}}
            </p>
        </div>
        <button
            type="button"
            class="text-slate-400 transition hover:text-slate-600 dark:hover:text-slate-200"
            aria-label="{{i18n.promo.starProject.dismiss}}"
            data-star-toast-dismiss
        >
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <a
        class="inline-flex items-center justify-center gap-2 rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800 dark:bg-sky-500 dark:hover:bg-sky-400"
        href="{{#starToastUrl}}{{starToastUrl}}{{/starToastUrl}}{{^starToastUrl}}{{site.identity.social.github}}{{/starToastUrl}}"
        target="_blank"
        rel="noreferrer"
        data-star-toast-cta
    >
        {{i18n.promo.starProject.cta}}
        <span aria-hidden="true">↗</span>
    </a>
</div>
