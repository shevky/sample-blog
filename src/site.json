{
  "identity": {
    "author": "Sample Blog Collective",
    "email": "hello@example.com",
    "url": "http://localhost:3000/",
    "themeColor": "#0284c7",
    "social": {
      "rss": true,
      "github": "https://github.com/fatihtatoglu",
      "linkedin": "https://www.linkedin.com/in/fatihtatoglu"
    }
  },
  "seo": {
    "defaultImage": "https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&w=1600&q=80",
    "includeCollections": true,
    "includePaging": false
  },
  "analytics": {
    "enabled": false,
    "gtmId": "",
    "gaId": "",
    "clarityId": ""
  },
  "features": {
    "postOperations": {
      "enabled": true,
      "like": false,
      "dislike": false,
      "comment": false,
      "share": {
        "enabled": true,
        "whatsapp": true,
        "x": true,
        "linkedin": true,
        "facebook": false,
        "copy": true
      }
    },
    "search": false
  },
  "markdown": {
    "highlight": true
  },
  "content": {
    "pagination": {
      "pageSize": 2,
      "segment": {
        "tr": "sayfa",
        "en": "page"
      }
    },
    "languages": {
      "default": "tr",
      "supported": [
        "tr",
        "en"
      ],
      "canonical": {
        "tr": "/",
        "en": "/en/"
      }
    },
    "collections": {
      "tags": {
        "template": "tag",
        "types": [
          "tag"
        ],
        "slugPattern": {
          "tr": "etiket/{{key}}",
          "en": "tag/{{key}}"
        },
        "pairs": {
          "docker": {
            "tr": "css",
            "en": "css"
          }
        }
      },
      "category": {
        "template": "tag",
        "types": [
          "category"
        ],
        "slugPattern": {
          "tr": "/{{key}}",
          "en": "/{{key}}"
        }
      }
    }
  },
  "build": {
    "minify": false,
    "debug": true
  },
  "robots": {
    "allow": [
      "/"
    ],
    "disallow": [
      "draft/",
      "assets/"
    ]
  },
  "plugins": [
    "@shevky/plugin-robots-txt",
    "@shevky/plugin-tailwindcss",
    "@shevky/plugin-esbuild",
    "@shevky/plugin-rss",
    "@shevky/plugin-sitemap"
  ],
  "pluginConfigs": {
    "shevky-content-bridge": {
      "maxItems": 10,
      "sources": [
        {
          "name": "catch-jobs",
          "fetch": {
            "endpointUrl": "https://gate.catch.jobs/job/v1/export",
            "method": "GET",
            "headers": {
              "X-Job-Export-Key": "3f5d7f6e-7d2b-46ef-8f95-0a94a64e7f2f",
              "X-Culture": "tr-TR"
            },
            "pagination": {
              "pageParam": "pageIndex",
              "sizeParam": "pageSize",
              "pageIndexStart": 0,
              "pageSize": 2,
              "itemsPath": "$_data.jobs",
              "totalPath": "$_data.totalCount",
              "delayMs": 1000,
              "mode": "page"
            },
            "timeoutMs": 30000
          },
          "mapping": {
            "frontMatter": {
              "id": "$_id",
              "lang": "tr",
              "title": "$_title",
              "slug": "$slugify($concat($_companyName, ' ', $_title, ' ', $_typeStr))",
              "canonical": "$concat('~/', $slugify($concat($_companyName, ' ', $_title, ' ', $_typeStr)))",
              "template": "post",
              "layout": "default",
              "status": "published",
              "featured": true,
              "date": "$_dateCreateISO8601",
              "description": "$_title",
              "category": "$_category",
              "cover": "$_companyLogo",
              "notification.badge.title": "$_companyName"
            },
            "content": "$concat('{{#front.raw.notification}}{{> components/badge}}{{/front.raw.notification}}','\r\n\r\n\r\n\r\n',$_description)",
            "sourcePath": "$concat('bridge://catch/jobs/', $_id, '.md')"
          },
          "maxItems": 2
        }
      ]
    },
    "shevky-rss": {
      "feedFilename": "rss.xml",
      "feedTtl": 1440
    }
  }
}